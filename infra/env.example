# =============================================================================
# Recipe Generator - Docker Environment Variables
# =============================================================================
# Copy this file to .env and modify the values as needed
# =============================================================================

# MongoDB Configuration (auto-generated from credentials below)
# MONGODB_URI=mongodb://admin:your_secure_password_here@mongodb:27017/recipe_generator?authSource=admin

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_password_here
MONGO_DATABASE=recipe_generator

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=google/gemini-2.5-flash

# Application Configuration
LOG_LEVEL=INFO
SEED_ON_START=true
SPRING_PROFILES_ACTIVE=dev

# Redis Configuration (for production)
REDIS_PASSWORD=your_redis_password_here

# Optional: Application ports
# APP_PORT=8080
# MONGO_PORT=27017

# Optional: Memory settings for JVM
# JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:+UseContainerSupport
